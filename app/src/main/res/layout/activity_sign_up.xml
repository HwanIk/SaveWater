<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SignUp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="회원정보등록"
        android:textColor="#00c0ff"
        android:textSize="40sp"/>
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/userEmail"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:hint="이메일을 입력해주세요"
        android:textSize="15sp"
        android:background="@drawable/edittext_bg"
        app:met_baseColor="#000000"
        app:met_primaryColor="#0072ff"
        app:met_textColorHint="#d8d8d8"/>
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/userPwd"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:hint="비밀번호를 입력해주세요"
        android:textSize="15sp"
        android:background="@drawable/edittext_bg"
        app:met_baseColor="#000000"
        app:met_primaryColor="#0056d3"
        app:met_textColorHint="#d8d8d8"
        android:password="true"/>
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/userNickName"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:hint="닉네임을 입력해주세요"
        android:textSize="15sp"
        android:background="@drawable/edittext_bg"
        app:met_baseColor="#000000"
        app:met_primaryColor="#0072ff"
        app:met_textColorHint="#d8d8d8"/>
    <TextView
        android:id="@+id/userAddress"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:hint="거주지역을 입력해주세요" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서울시"
            android:onClick="choiceCity"/>
        <Button
            android:id="@+id/district"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="강동구"
            android:onClick="choiceDistrict"/>
    </LinearLayout>
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/userFamilyMember"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:hint="거주인원을 입력해주세요"
        android:textSize="15sp"
        app:met_baseColor="#000000"
        app:met_primaryColor="#0072ff"
        app:met_textColorHint="#d8d8d8"/>
    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="완료" />
</LinearLayout>
